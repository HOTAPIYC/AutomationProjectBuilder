             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutomationProjectBuilder.Gui.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#1d2b39">
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,20">
            <TextBlock Text="AUTOMATION PROJECT" FontWeight="Black" FontSize="40" Foreground="White"/>
