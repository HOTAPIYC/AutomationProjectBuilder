<UserControl x:Class="AutomationProjectBuilder.Gui.Views.ViewDialogNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AutomationProjectBuilder.Gui.Views"
        Height="150" Width="300">
    <Grid>
        <Rectangle Fill="White" 
                   RadiusX="3" 
                   RadiusY="3"/>

        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="Notification" 
                       FontSize="17"
                       Margin="10"/>

            <TextBlock Text="{Binding NotificationText}" Margin="10,0,10,10"/>

            <StackPanel HorizontalAlignment="Center" Width="260" Margin="10">
                <Button Content="OK" Command="{Binding CmdOk}" Width="100" Height="26" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
