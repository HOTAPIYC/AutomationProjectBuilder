<Window x:Class="AutomationProjectBuilder.Views.Dialogs.ViewDialogSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AutomationProjectBuilder.Views.Dialogs"
        ShowInTaskbar="false"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="ViewDialogSettings" Height="500" Width="400">
    <Grid>
        <StackPanel Margin="10,5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Source for custom configuration" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Content="Edit" Command="{Binding CmdSetConfigSource}" Width="50" Height="26" Margin="5,0"/>
            </StackPanel>
            <TextBox Text="{Binding FilePathConfig}" IsManipulationEnabled="False" VerticalAlignment="Center" Margin="0,5"/>
        </StackPanel>
        <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Content="Close" Command="{Binding CmdClose}" MinWidth="100" Height="26" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
