<Window x:Class="AutomationProjectBuilder.Views.DialogAddSubsystemView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutomationProjectBuilder.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Add a new subsystem" Height="450" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBox Text="{Binding TextInput}" 
                     Margin="0,0,0,10"/>
            <Button Content="Add subsystem"
                    Command="{Binding CmdCreateNewComponent}"
                    Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>
