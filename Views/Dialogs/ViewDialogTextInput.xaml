<Window x:Class="AutomationProjectBuilder.Views.ViewDialogTextInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutomationProjectBuilder.Views"
        xmlns:converter="clr-namespace:AutomationProjectBuilder.Misc"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Item Details" Height="100" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBox Text="{Binding TextInput}" 
                     Margin="0,0,0,10"/>
        </StackPanel>
        <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Content="OK"
                    Command="{Binding CmdSave}"
                    MinWidth="100"
                    Margin="10,0,0,0"/>
            <Button Content="Cancel"
                    Command="{Binding CmdSave}"
                    MinWidth="100"
                    Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
